@model MineSweeper.Models.ViewModels.NewGameViewModel

@{
    ViewData["Title"] = "Нова гра";
}

<h2>Налаштування нової гри</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Game" asp-action="Index" method="post">

            @* Сумарна валідація, якщо потрібна *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mines" class="control-label"></label>
                <input asp-for="Mines" class="form-control" />
                <span asp-validation-for="Mines" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Почати гру" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>